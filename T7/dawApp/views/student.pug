extends layout

block content
    .w3-card-4
    header.w3-container.w3-light-blue
        h3.w3-left #{student.nome}
    article.w3-container.w3-pale-blue
      if student != null
            h2 
            b Name: 
            | #{student.nome}
            h2 
            b Number: 
            | #{student.numero}
            h2 
            b Git: 
            a(href=student.git) #{student.git}
            h3
            b TPC: 
            #{student.tpc}
            br
            br
            button.w3-btn.w3-blue.w3-round.custombutton(type='delete', value='Delete', style="margin-right:10px", onclick='deleteStudent(' + student.numero + ')') Delete
            a(href='./edit/' + student.numero).button.w3-btn.w3-blue.w3-round.custombutton(type='edit', value='Edit') Edit
            br
            br
      else
        .w3-container
          p There is no student with that number
    footer.w3-container.w3-light-blue
        label Gerado por dawApp :: 2020-Nov, rio

  
